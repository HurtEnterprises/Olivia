<resources>

	<!--
		Base application theme, dependent on API level. This theme is replaced
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Light">
		<!--
			Theme customizations available in newer API levels can go in
			res/values-vXX/styles.xml, while customizations related to
			backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="spinner_style" >
		<item name="android:background">@drawable/spinner_background</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>

	</style>

	<style name="NavigationViewOwnStyle">
		<item name="android:listPreferredItemHeightSmall">10dp</item> <!--item height-->
		<item name="android:textSize">3px</item> <!--item text size-->
	</style>

	<style name="weightfont">
		<item name="android:fontFamily">SegoeUI-Light</item> <!--item text size-->
	</style>
	<style name="chart_label">
		<item name="android:layout_width">25dp</item>
		<item name="android:layout_height">18dp</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:textAlignment">textStart</item>
		<item name="android:text">@string/label_metric</item>
	</style>

</resources>
